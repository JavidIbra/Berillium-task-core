<div class="gtco-section gto-features">
    <div class="gtco-container">
        <div class="row">

            @foreach (var item in Model.services)
            {
                <div class="col-md-4">
                    <div class="feature-left">
                        <i class="@item.Icon"></i>
                        <div class="copy">
                            <h3>@item.Title</h3>
                            <p>@item.Text</p>
                            <p><a href="#" class="gtco-more">@item.ButtonText</a></p>
