@model HomeViewModel

<div class="gtco-container">
    <div class="row">
        <div class="col-md-12">
            <div class="owl-carousel owl-carousel-fullwidth">

                @foreach (var item in Model.banners)
                {
                    <div class="item">
                        <a href="#">
                            <img src="~/images/@item.Image" alt="Free Website Template by FreeHTML5.co">
                            <div class="slider-copy">
                                <h2>@item.Text</h2>
                            </div>
                        </a>
                    </div>
                }


            </div>
        </div>
    </div>
</div>

<div class="gtco-section">
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 gtco-heading text-center">
                <h2>Work</h2>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus placerat enim et urna sagittis, rhoncus euismod erat tincidunt. Donec tincidunt volutpat erat.</p>
            </div>
        </div>
        <div class="row">

            <div class="col-md-12">
                <div class="owl-carousel owl-carousel-carousel">

                    @foreach (var item in Model.Projects)
                    {
                        <div class="item">
                            <div class="gtco-item">
                                <a href="/Projects/Index"><img src="~/images/@item.img" alt="" class="img-responsive"></a>
                                <h2><a href="#">@item.Header</a></h2>
                                <p class="role">@item.Text</p>
                            </div>
                        </div>
                    }

                </div>
            </div>

        </div>
    </div>
</div>
<!-- END Work -->

<div class="gtco-section">
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-6 gtco-news">
                <h2>News</h2>
                <ul>

                    @foreach (var item in Model.news)
                    {
                       <li>
                            <a href="#">
                             <span class="post-date">@item.Time</span>
                              <h3>@item.Title</h3>
                              <p>@item.Text</p>
                            </a>
                       </li>   
                    }

                </ul>
            
                    <p><a href="@Model.news.First().BtnLink" class="btn btn-sm btn-special">@Model.news.First().BtnText</a></p>
               

            </div>
